@if (contentLoaded)
{
    @ChildContent
}
else
{
    <div style="position:absolute; top:10vh; width:100%; text-align:center">
        <img src="/Emiable_Logo_Vert.png" alt="Emiable Logo" />
    </div>
}

@code {

    bool contentLoaded;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(4000);
        contentLoaded = true;
    }
}
